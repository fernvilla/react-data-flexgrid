{
  "name": "react-data-flexgrid",
  "version": "0.2.0",
  "description": "data grid",
  "main": "dist/index.js",
  "style": "dist/grid.css",
  "files": ["*.md", "dist"],
  "author":
    "Fernando Villasenor <fvilla18@gmail.com> (http://fernvillasenor.com)",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:autoprefixer":
      "postcss dist/css/*.css --use autoprefixer --no-map -d dist/css",
    "build:css": "node-sass src/styles -o dist/css --output-style compressed",
    "build:js": "babel src -d dist",
    "css:watch": "node-sass -w src/styles -o dist/css",
    "js:watch": "babel src -w -d dist",
    "lint": "eslint src/**; exit 0",
    "lint:watch": "esw -w src/**",
    "prepublish": "yarn run build",
    "start": "npm-run-all -p js:watch css:watch lint:watch",
    "start:all": "npm-run-all -p js:watch css:watch lint:watch example",
    "example": "cd example && yarn start"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome": "^1.1.2",
    "@fortawesome/fontawesome-free-brands": "^5.0.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.4",
    "@fortawesome/react-fontawesome": "^0.0.17",
    "autoprefixer": "^7.2.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "eslint": "^4.15.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-watch": "^3.1.3",
    "fuse.js": "^3.2.0",
    "lodash": "^4.17.4",
    "natsort": "^1.0.6",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.16",
    "postcss-cli": "^4.1.1",
    "prop-types": "^15.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fernvilla/react-data-flexgrid.git"
  }
}
