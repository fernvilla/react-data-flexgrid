{
  "name": "react-data-flexgrid",
  "version": "0.1.0",
  "description": "data grid",
  "main": "dist/index.js",
  "style": "dist/grid.css",
  "files": ["*.md", "dist", "lib"],
  "author":
    "Fernando Villasenor <fvilla18@gmail.com> (http://fernvillasenor.com)",
  "license": "ISC",
  "scripts": {
    "build": "yarn run js && yarn run css",
    "css": "node-sass lib/styles -o dist/css --output-style compressed",
    "css:watch": "node-sass -w lib/styles -o dist/css",
    "example": "cd example && yarn start",
    "js": "babel lib -d dist",
    "js:watch": "babel lib -w -d dist",
    "lint": "eslint lib/**; exit 0",
    "lint:watch": "esw -w lib/**",
    "prepublish": "npm run build",
    "start": "npm-run-all -p js:watch css:watch",
    "start:all": "npm-run-all -p js:watch css:watch example"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "eslint": "^4.14.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-watch": "^3.1.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "prop-types": "^15.6.0"
  }
}
